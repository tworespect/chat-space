.notification
  .chat-side
    .user
      .user-cotent
        .user-name
          = current_user.name
        .chat-side__group-icon
          = link_to new_group_path do
            = fa_icon "pencil-square-o",class: "side-content__header__icon"
          = link_to edit_user_path(current_user) do
            = fa_icon "cog" , class: "side-content__header__icon"
    .chat-side__groups
      - current_user.groups.each do |group|
        .chat-side__group
          = link_to group_messages_path(group), class: "link" do
            .chat-side__group-name
              = group.name
            .chat-side__group-message
              = group.show_last_message
